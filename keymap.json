// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "f6": "terminal_panel::ToggleFocus",
      "f12": "assistant::ToggleFocus",
      "ctrl-q": "pane::CloseActiveItem",
      "ctrl-shift-q": "workspace::CloseWindow",
      "alt-k": ["workspace::ActivatePaneInDirection", "Left"],
      "alt-t": ["workspace::ActivatePaneInDirection", "Down"],
      "alt-h": ["workspace::ActivatePaneInDirection", "Up"],
      "alt-s": ["workspace::ActivatePaneInDirection", "Right"]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-s": "workspace::Save",
      "ctrl-shift-s": "workspace::SaveAll"
    }
  },
  {
    "context": "Editor && mode == full && inline_completion",
    "bindings": {
      "shift-tab": "editor::AcceptPartialInlineCompletion"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-n": "editor::ContextMenuNext",
      "ctrl-p": "editor::ContextMenuPrev"
      // "tab": "editor::ContextMenuNext",
      // "shift-tab": "editor::ContextMenuPrev"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || VimControl && !menu",
    "bindings": {
      ";": "command_palette::Toggle",
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePrevItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "pageup": "editor::MovePageUp",
    }
  },
  {
    "context": "VimControl && !VimWaiting && !menu",
    "bindings": {
      "?": "editor::ShowSignatureHelp",
      // Selection
      "m": "editor::SelectLargerSyntaxNode",
      "shift-m": "editor::SelectSmallerSyntaxNode",
      "@": "editor::SelectAllMatches",
      // Multiple cursors
      "b": "editor::AddSelectionBelow",
      "B": "editor::AddSelectionAbove",
      // Space bindings
      "space f": "file_finder::Toggle",
      "space d": "editor::GoToDiagnostic",
      "space shift-d": "diagnostics::Deploy",
      "space a": "editor::ToggleCodeActions",
      "space c": "editor::ToggleComments",
      // Misc
      "ctrl-h": "editor::MoveLineUp",
      "ctrl-t": "editor::MoveLineDown",
      "shift-u": "editor::Redo",
      "ctrl-c": "editor::ToggleComments",
      "K": "vim::EndOfDocument",
      "]": "editor::GoToDiagnostic",
      "[": "editor::GoToPrevDiagnostic"
    }
  },
  {
    "context": "Editor && VimControl && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work only in normal mode
      "l": "vim::ToggleVisualLine",
      "L": "vim::ToggleVisualLine",
      ">": "vim::Indent",
      "<": "vim::Outdent",
      // Movement
      "k": "vim::Left",
      "t": "vim::Down",
      "h": "vim::Up",
      "s": "vim::Right"
    }
  },
  {
    "context": "Editor && VimControl && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      // visual, visual line & visual block modes
      "l": "vim::Down",
      "L": "vim::Down",
      "v": "editor::SelectLargerSyntaxNode",
      "V": "editor::SelectSmallerSyntaxNode",
      // Movement
      "k": "vim::Left",
      "t": "vim::Down",
      "h": "vim::Up",
      "s": "vim::Right",
      // Case manipulation
      "`": "vim::ConvertToLowerCase",
      "~": "vim::ConvertToUpperCase"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-space": "editor::ShowInlineCompletion"
    }
  }
]
